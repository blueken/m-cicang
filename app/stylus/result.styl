.shares
	$shares_w = 640
	$shares_h = 432
	position absolute
	bottom 0

	width 100%
	height ($shares_h/920)*100%
	background-color white
	.shares_wrapper
		$wrapper_w = 616
		
		width ($wrapper_w/$shares_w)*100%
		height 100%
		margin-left (12/640)*100%
		
		ul 
			width 100%
			height 100%
			li 
				width (112/$wrapper_w)*100%
				height (150/$shares_h)*100%
				float left
				margin (45/$wrapper_w)*100% (20/$wrapper_w)*100% 0 (20/$wrapper_w)*100% 

				// background-color green
				p 
					margin-top (15/112)*100%
					color #666666
					font-size 2.2rem
					text-align center
