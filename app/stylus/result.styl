.content
	.result
		$result_w = 577
		$result_h = 669

		width ($result_w * 100 / 640)%
		height ($result_h * 100 / 920)%
		// background-color gold

		position absolute

		margin-top (115 * 100 / 640)%
		margin-left (30 * 100 / 640)%
		.result_img 
			width 100%
			max-height 100%
		.winorlose
			width 100%;
			height (115 * 100 / $result_h)%
			// background-color gold

			position absolute
			top (80 * 100 / $result_h)%

			

			p.you
				//win1
				color #fd585c
				font-size 3.2rem
				margin-left (46*100 / $result_w)%
			p.you2
				//win2
				color #fdcc41
				font-size 3.2rem
				margin-left (46*100 / $result_w)%
			p.you3
				//lose1
				color #5b53a9
				font-size 3.2rem
				margin-left (46*100 / $result_w)%

			p.result
				color #ffffff
				font-size 6.0rem
				margin-top (16*100 / $result_w)%
				margin-left (72*100 / $result_w)%

		.info
			width ($result_w*100/$result_w)%
			height (256*100/$result_h)%
			// background-color gold

			position absolute
			bottom 0
			img 
				position absolute
				width (130*100/$result_w)%
				height (130*100/256)%
				border-radius 50%

				margin-top (64*100/$result_w)%
				margin-left (9*100/$result_w)%
			.nick
				position absolute
				margin-top (204*100/$result_w)%
				margin-left (24*100/$result_w)%
				font-size 2.0rem
				color white
			.total
				position absolute
				margin-top (170*100/$result_w)%
				margin-left (165*100/$result_w)%
				font-size 5.4rem
				color white
			.correct
				position absolute
				margin-top (15*100/$result_w)%
				margin-left (396*100/$result_w)%
				font-size 3.2rem
				color white
			.time
				position absolute
				margin-top (110*100/$result_w)%
				margin-left (396*100/$result_w)%
				font-size 3.2rem
				color white
			.combo
				position absolute
				margin-top (198*100/$result_w)%
				margin-left (396*100/$result_w)%
				font-size 3.2rem
				color white
	.btns
		//640*72
		width 100%
		height (72*100/920)%
		// background-color gold

		position absolute
		bottom (32*100/920)%
		.btn 
			width (272*100/640)%
			height 100%
			background-color gold

			display inline-block
			border-radius 0.6rem

			font-size 3.0rem
			text-align center
			margin-left (32*100/640)%
		.down 
			background-color #29b6f6

		.show
			background-color #fd585c
		.show2
			background-color #fdcc41	
		.show3
			background-color #5b53a9		
.content_bg2
	background silver url("../images/bg2.jpg") center center no-repeat
	background-size cover
.content_bg3
	background silver url("../images/bg3.jpg") center center no-repeat
	background-size cover