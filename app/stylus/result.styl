.content
	.result
		$result_w = 577
		$result_h = 669

		width ($result_w * 100 / 640)%
		height ($result_h * 100 / 920)%
		// background-color gold

		position absolute
		z-index 2

		margin-top (100 * 100 / 640)%
		margin-left (30 * 100 / 640)%
		.result_img 
			width 100%
			max-height 100%
		.winorlose
			width 100%;
			height (115 * 100 / $result_h)%
			// background-color gold

			position absolute
			top (80 * 100 / $result_h)%

			animation-duration: 1.2s;

			p.you
				//win1
				color #fd585c
				font-size 3.2rem
				margin-left (46*100 / $result_w)%
			p.you2
				//win2
				color #fdcc41
				font-size 3.2rem
				margin-left (46*100 / $result_w)%
			p.you3
				//lose1
				color #5b53a9
				font-size 3.2rem
				margin-left (46*100 / $result_w)%

			p.result
				color #ffffff
				font-size 6.0rem
				margin-top (16*100 / $result_w)%
				margin-left (72*100 / $result_w)%

		.info
			$info_w = $result_w
			$info_h = 256
			width ($result_w*100/$result_w)%
			height (256*100/$result_h)%
			// background-color gold

			position absolute
			bottom 0
			img 
				position absolute
				width (130*100/$result_w)%
				height (130*100/256)%
				border-radius 50%

				top (64*100/$info_h)%
				left (9*100/$info_w)%
			.nick
				position absolute
				width (115/640)*100%
				bottom (31*100/$info_h)%
				left (20*100/$info_w)%
				font-size 2.0rem
				text-align center
				color white
			.total
				position absolute
				top (170*100/$info_h)%
				left (165*100/$info_w)%
				font-size 5.4rem
				color white
			.correct
				position absolute
				top (15*100/$info_h)%
				left (396*100/$info_w)%
				font-size 3.2rem
				color white
				animation-duration: 1.2s;
			.time
				position absolute
				top (110*100/$info_h)%
				left (396*100/$info_w)%
				font-size 3.2rem
				color white
				animation-duration: 1.2s;
			.combo
				position absolute
				top (198*100/$info_h)%
				left (396*100/$info_w)%
				font-size 3.2rem
				color white
				animation-duration: 1.2s;
	.btns
		//640*72
		width 100%
		height (72*100/920)%
		// background-color gold

		position absolute
		z-index 3
		bottom (32*100/920)%
		.btn 
			width (272*100/640)%
			height 100%
			background-color gold

			display inline-block
			border-radius 0.6rem

			font-size 3.0rem
			text-align center
			margin-left (32*100/640)%
		.down 
			background-color #29b6f6

		.show
			background-color #fd585c
		.show2
			background-color #fdcc41	
		.show3
			background-color #5b53a9		
