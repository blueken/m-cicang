        .cloud_b
            display inline-block
            width 4000px
            height 67px
            background url("../images/cloud_b.png")
            background-size contain
            opacity 0.75
            position absolute
            top 0
            animation cloud_move 200s linear infinite

           
        .cloud_f
            display inline-block
            width 4000px
            height 67px
            background url("../images/cloud_f.png")
            background-size contain
            position absolute
            top 0
            animation cloud_move 100s linear infinite
            // -webkit-transform scaleY(0.5);

    .ani_cloud_down
        animation cloud_down 0.2s ease forwards
@keyframes cloud_move
    100%
        transform translateX(-50%)
@keyframes cloud_down
    100%
        transform translateY(200px);
