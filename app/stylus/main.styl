body
    background #EEF3FA
    font-family "Helvetica Neue", Helvetica, Arial, "Microsoft YaHei", "SimSun"
    color #333


.hero-unit
    margin 50px auto 0 auto
    width 300px
    font-size 18px
    font-weight 200
    line-height 30px
    background-color #eee
    border-radius 6px
    padding 60px


.hero-unit h1
    font-size 60px
    line-height 1
    letter-spacing -1px


.browsehappy
    margin 0.2em 0
    background #ccc
    color #000
    padding 0.2em 0

.hidden
    position absolute
    clip rect(1px, 1px, 1px, 1px)
    clip rect(1px 1px 1px 1px)

a, a:link, a:visited, a:active, a:hover {
    text-decoration none
    color #666;
}
