body
    background #000
    font-family "Helvetica Neue", Helvetica, Arial, sans-serif
    color #333


.hero-unit
    margin 50px auto 0 auto
    width 300px
    font-size 18px
    font-weight 200
    line-height 30px
    background-color #eee
    border-radius 6px
    padding 60px


.hero-unit h1
    font-size 60px
    line-height 1
    letter-spacing -1px


.browsehappy
    margin 0.2em 0
    background #ccc
    color #000
    padding 0.2em 0

.hidden
    position absolute
    clip rect(1px, 1px, 1px, 1px)
    clip rect(1px 1px 1px 1px)

/*muti-browser capability*/
animation()
    -webkit-animation arguments
    -moz-animation arguments
    -o-animation arguments
    -ms-animation arguments
    animation arguments
/*muti-browser capability end*/


.wrapper {
    width 100%
    position relative
    margin 0 auto
}

/* CSS for header.html BEGIN*/
header
    position absolute
    top 0px
    width 100%
    overflow hidden
    height 45px
    line-height 45px
    background-color #29B6F6
    font-size 1rem
    font-family Helvetica, "Microsoft YaHei", "SimSun"
    z-index 2

    a
        text-decoration none
        color white

    .page_name
        padding-left 8px

        span.name_txt
            padding-left 8px

    .download
        position absolute
        right 45px
        width 45px
        height 45px
        span.download_icon
            width 14px 
            height 17px 
            display inline-block
            margin 14px 15.5px
            background url(../images/download.png) center center no-repeat
            background-size cover
            

    .menu
        position absolute
        right 0
        width 45px
        height 45px
        animation menu_off 0.8s ease forwards
        span.menu_icon
            width 4px 
            height 16px 
            display inline-block
            margin 14px 20.5px
            background url(../images/menu.png) center center no-repeat
            background-size cover
        &:hover
            animation menu_on 0.8s ease forwards

@keyframes menu_on
    0%
        transform rotate(0deg)
    100%
        transform rotate(90deg)
@keyframes menu_off
    0%
        transform rotate(90deg)
    100%
        transform rotate(0deg)
/* CSS for header.html END*/

/* CSS for cloud.html BEGIN*/
    .clouds
        width 100%
        // padding-bottom 21.1% /*135 / 640*/
        height 58.89% //(416+135)/920
        overflow hidden
        position absolute
        bottom 0px
        // background-color gold
        .cloud_bg 
            display inline-block
            width 100%
            height 75.5% //416/(416+135)
            background-color white
            position absolute
            bottom 0
        .cloud_b
            display inline-block
            width 4000px
            height 67px
            background url("../images/cloud_b.png")
            background-size contain
            opacity 0.75
            position absolute
            top 0
            animation cloud_move 200s linear infinite

           
        .cloud_f
            display inline-block
            width 4000px
            height 67px
            background url("../images/cloud_f.png")
            background-size contain
            position absolute
            top 0
            animation cloud_move 100s linear infinite
            // -webkit-transform scaleY(0.5);


@keyframes cloud_move
    100%
        transform translateX(-50%)
/* CSS for cloud.html END*/


