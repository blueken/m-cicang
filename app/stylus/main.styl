/* CSS for cloud.html BEGIN*/
    .clouds
        width 100%
        // padding-bottom 21.1% /*135 / 640*/
        height 58.89% //(416+135)/920
        overflow hidden
        position absolute
        bottom 0px
        // background-color gold
        .cloud_bg 
            display inline-block
            width 100%
