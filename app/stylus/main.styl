/* CSS for header.html BEGIN*/
header
    position absolute
    top 0px
    width 100%
    overflow hidden
    height 45px // 45/920
    line-height 45px
    background-color #29B6F6
    font-size 1rem
    
    z-index 99

    a
        color white

    .page_name
        padding-left 8px

        span.name_txt
            padding-left 8px

    .download
        position absolute
        right 45px
        width 45px
        height 45px
        span.download_icon
            width 14px 
            height 17px 
            display inline-block
            margin 14px 15.5px
            background url(../images/download.png) center center no-repeat
            background-size cover
            

    .menu
        position absolute
        right 0
        width 45px
        height 45px
        animation menu_off 0.8s ease forwards
        span.menu_icon
            width 4px 
            height 16px 
            display inline-block
            margin 14px 20.5px
            background url(../images/menu.png) center center no-repeat
            background-size cover
        &:hover
            animation menu_on 0.8s ease forwards

@keyframes menu_on
    0%
        transform rotate(0deg)
    100%
        transform rotate(90deg)
@keyframes menu_off
    0%
        transform rotate(90deg)
    100%
        transform rotate(0deg)
/* CSS for header.html END*/

